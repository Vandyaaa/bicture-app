<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/deleteCollage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderradiussmall3"
        android:backgroundTint="@color/blacksmooth2"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/borderradiussmall"
            android:backgroundTint="@color/blacksmooth2dot5"
            android:gravity="center">

            <View
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:background="@drawable/lingkaran"
                android:backgroundTint="@color/blacksmooth3" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gentium"
            android:paddingTop="20dp"
            android:text="Title"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="1000"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/collageNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/blacksmooth3"
            android:focusedSearchResultHighlightColor="@color/red"
            android:fontFamily="@font/gentium"
            android:hint="Add new Collage"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minHeight="50dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/blacksmooth4"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">



            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:layout_height="50dp"
                android:background="@drawable/borderradiussmall"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/blacksmooth3"
                android:fontFamily="@font/gentium"
                android:textFontWeight="1000"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="16sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.48" />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderradiussmall"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/gentium"
                android:textFontWeight="1000"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.48" />



        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



