<!-- res/drawable/love_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bagian kiri atas bentuk hati -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <size android:width="50dp" android:height="50dp" />
                <solid android:color="#FF4081" />
            </shape>
        </rotate>
    </item>

    <!-- Bagian kanan atas bentuk hati -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <size android:width="50dp" android:height="50dp" />
                <solid android:color="#FF4081" />
            </shape>
        </rotate>
    </item>

    <!-- Bagian bawah bentuk hati -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="70dp" android:height="50dp" />
            <solid android:color="#FF4081" />
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp" />
        </shape>
    </item>
</layer-list>
